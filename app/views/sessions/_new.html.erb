<div class="subscription popup_login">
	<div id="signup" class="login">
		<h1>Connectez-vous</h1>
		<div id="instant_signup">
			<h3>Connexion instantan√©e</h3>
			<a href="auth/facebook/"><img src="/img/facebook.png" alt="Facebook" /></a>
		</div>

		<div id="normal_signup">
			<h3>Connexion standard</h3>

			<%= form_tag session_path do -%>
			<p><%= label_tag 'login' %>
			<%= text_field_tag 'login', @login %>
			<div class="clear"></div>
		    </p>

			<p><%= label_tag 'Mot de passe' %>
			<%= password_field_tag 'password', nil %>
			<div class="clear"></div>
		    </p>

			<!-- Uncomment this if you want this functionality
			<p><%= label_tag 'remember_me', 'Remember me' %>
			<%= check_box_tag 'remember_me', '1', @remember_me %></p>
			-->

			<p><%= submit_tag 'Se connecter' %></p>
			<% end %>
		</div>
		<div class="clear"></div>
	</div>
</div>
