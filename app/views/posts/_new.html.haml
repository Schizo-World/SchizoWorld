    - if current_user.url_img != nil
      = image_tag current_user.url_img << "=small", :alt => current_user.login, :class => "left"
    - else
      = image_tag current_user.avatar.url(:small), :class => "left"
  = form_for([@project, @post]) do |f|
    -if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.text_area :body, :value => "RÃ©diger un message...", :rows => 5, :cols => 50#, :class => "submittable"
