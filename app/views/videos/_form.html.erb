  <div class="group">
    <div class="dhtmlxTree" id="treeboxbox_tree" setImagePath="/js/dhtmlxTree/dhtmlxTree/codebase/imgs/csh_dhx_skyblue/" style="width:250px;height:218px;overflow:auto;float:left;">
      <ul>
        <%  @nodes.each do |node| %>
          <li>
            <%= node['title'] %> 
            <%= radio_button_tag 'parent_id', node['id'] %>
            <%= render :partial => "video", :locals => {:children => node} %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="info_video">
    <div class="field">
      <%= f.label :title, t("activerecord.attributes.video.title", :default => "Titre"), :class => :label %>
      <%= f.text_field :title, :class => 'text_field', :value => @project.name %>
    </div>

    <div class="field">
      <%= f.label :description, t("activerecord.attributes.video.description", :default => "Description"), :class => :label %>
      <%= f.text_area :description, :class => 'text_field', :value => @project.description %>
    </div>

    <div class="field">
      <%= f.hidden_field(:project_id, :value => @project.id)%>
    </div>

    <div class="field">
    <% if @video.new_record?%>
      <button class="field" type="submit">
        <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Sauvegarder la vidéo")}") %> <%= t("web-app-theme.save", :default => " ") %>
      </button>
    <%else%>
      <button class="field" type="submit">
        <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Sauvegarder la vidéo")}") %> <%= t("web-app-theme.save", :default => " ") %>
      </button>
    <%end%>

      <span class="text_button_padding"><%= t("web-app-theme.or", :default => " ou ") %></span>
    	<%= link_to t("web-app-theme.cancel", :default => "Annuler"), videos_path, :class => "text_button_padding link_button" %>
    </div>
  </div>