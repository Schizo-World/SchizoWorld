<div id="sky">
  <div id="container" class="socialContainer">
    <% if @user.url_img != nil%>
      <a href="<%= :profile %>"><%= image_tag @user.url_img << "=large", :alt => @user.login, :class => "img_sheet" %></a>
      <% else %>
      <a href="<%= :profile %>"><%= image_tag @user.avatar.url(:large), :class => "img_sheet" %></a>
    <% end %>
    <h1><a href="<%= :profile %>"><%= @user.login %></a></h1>

    <div class="left info_sup">
      <% if @user == current_user %>
        <p><%=link_to 'Editer mon profil', edit_user_path(@user)%></p>
        <p><%= link_to "Create a project", new_project_path%></p>
        <br/>
      <% end %>

      <% if @user.location %>
        <p><%= @user.location %></p> 
      <%end%>

      <% if @user.status %>
        <p><%= @user.status %></p> 
      <%end%>

      <% if @user.links %>
        <p><%= @user.links %></p> 
      <%end%>           

    </div>

    <div class="right" id="social_content">
      <div id="socialMenu">
            <ul id="tabs">
              <li class="active">
                <a href="#"> Projets en cours </a>
              </li>
              <li>
                <a href="#"> Projets terminés </a>
              </li>
              <li>
                <a href="#"> Annonces </a>
              </li>
            </ul>
          </div>
          <div id="content">
                <% for project in @user.projects.order("created_at DESC") %>
                  <div class="project_list">
                    <a href="<%= project_path(project) %>"><%= image_tag project.avatar_project.url(:large), :class => "left" %></a>
                    <div>
                        <h3><%= link_to project.name, project_path(project) %></h3>
                      <p><%= truncate(project.description, :length => 200, :omission => '...') %></p>
                      <p class="send_mail"><img src="#" alt=""/><a href="#">Envoyer un message</a></p>
                  </div>
                      <div class="clear"></div>
                  </div>
                <% end %>

                <!--<h4>Les groupes dont vous êtes membre</h4>
                <% for project in @user.projects.where("admin = ?", false) %>
                    <a href="<%= :profile %>"><%= image_tag @user.avatar.url(:large), :class => "left" %></a>
                    <h3><%= link_to project.name, project_path(project) %></h3>
                    <p><%= project.description %></p>
                      <br/>
                <% end %>-->
          </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
